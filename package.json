{
  "name": "valtors",
  "version": "2.4.1",
  "description": "JavaScript validation library",
  "main": "index.js",
  "types": "index.d.ts",
  "author": "VZH",
  "license": "MIT",
  "homepage": "https://github.com/vlazh/valtors",
  "repository": {
    "type": "git",
    "url": "https://github.com/vlazh/valtors"
  },
  "bugs": {
    "url": "https://github.com/vlazh/valtors/issues"
  },
  "keywords": [
    "validation",
    "validate",
    "validators",
    "form validation",
    "react validation",
    "mobx validation",
    "javascript validation",
    "typescript validation"
  ],
  "scripts": {
    "clean": "rimraf dist/*",
    "copy:configs": "copyfiles package.json README.md LICENSE .npmignore ./dist/",
    "minify": "node-utils-minify --replace ./dist",
    "build": "yarn run clean && tsc --project ./tsconfig.json",
    "build-to-tutoron": "tsc --project ./tsconfig.json --outDir '../../../tutoron/node_modules/valtors/' && copyfiles package.json '../../../tutoron/node_modules/valtors/'",
    "build-to-player": "tsc --build ./tsconfig.json && yarn run minify && copyfiles -e './dist/*(package.json|README.md|LICENSE)' -e './dist/test/*' -u 1 './dist/**/*' '../../../player/modules/valtors'",
    "manual-test": "yarn run build && node ./dist/test/test.js",
    "patch-publish": "yarn run build && yarn run minify && npm version patch --no-workspaces-update -m 'v%s' && yarn run copy:configs && cd ./dist && npm publish --access public && git push --follow-tags",
    "minor-publish": "yarn run build && yarn run minify && npm version patch --no-workspaces-update -m 'v%s' && yarn run copy:configs && cd ./dist && npm publish --access public && git push --follow-tags"
  },
  "optionalDependencies": {
    "@js-toolkit/node-utils": "^1.1.4"
  },
  "devDependencies": {
    "@jstoolkit/configs": "^3.84.7",
    "@jstoolkit/utils": "^1.45.6",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.27.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "terser": "^5.15.1",
    "typescript": "^4.9.3"
  }
}
